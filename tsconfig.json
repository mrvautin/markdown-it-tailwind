{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2015",
    "strict": false,
    "noEmit": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "declaration":true,
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
